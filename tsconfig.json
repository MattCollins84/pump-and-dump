
{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "*": ["*"]
    },
    "typeRoots": ["./node_modules/@types"],
    "lib": [
      "dom",
      "es2015",
      "es5",
      "es6"
    ]
  }
}
